                </div>
                <span class="toolstree-label"><?= $name; ?></span>
                <div class="clearfix"></div>
            </a>
        <?php
        else:
            ?>
            <a data-target="#<?= $id; ?>_tools" data-toggle="collapse" class="collapsed">
                <i class="<?= $parentIcon ?>"></i>
                <span><?= $name; ?></span>
